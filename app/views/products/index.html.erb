<div class="container-fluid">
  <div class="row" style="background-color:black">
    <div class="col-3 col-sm-2 col-md-2 col-lg-1 col-xl-1">
      <nav class="nav navbar-dark">
        <%= link_to "Brands",url:"/products?p=1"%>
        <%= link_to "Models",url:"/products?p=2"%>
        <%= link_to "Product Type",url:"/products?p=3"%>
      </nav>
    </div>
    <div class="col-9 col-sm-10 col-md-10 col-lg-11 col-xl-11" style="background-color:white">
      <p id="notice"><%= notice %></p>

      <h1>Products</h1>

      <table>
        <thead>
          <tr>
            <th>Brand</th>
            <th>Model</th>
            <th>Variant</th>
            <th>Price</th>
            <th>Short description</th>
            <th>Long description</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% if @valueX==1 %>
            <% @products.select("brand").each do |brand| %>
              <tr>
                viendo marcas
                <td><%= brand.brand %></td>
              </tr>
            <% end %>
          <% end %>
          <% if @valueX==2 %>
            <% @products.select("model").each do |modelo| %>
              <tr>
                viendo modelos
                <td><%= modelo.model %></td>
              </tr>
            <% end %>
          <% end %>
          <% if @valueX==3 %>
            <% @products.select("product_type").each do |pt| %>
              <tr>
                viendo tipos
                <td><%= pt.product_type %></td>
              </tr>
            <% end %>
          <% end %>
          <% @products.each do |product| %>
            <tr>
              <td><%= product.brand %></td>
              <td><%= product.model %></td>
              <td><%= product.variant %></td>
              <td><%= product.price %></td>
              <td><%= product.short_description %></td>
              <td><%= product.long_description %></td>
              <td><%= link_to 'Show', product %></td>
              <td><%= link_to 'Edit', edit_product_path(product) %></td>
              <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <br>

      <%= link_to 'New Product', new_product_path %>
    </div>
  </div>
</div>
